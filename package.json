{
  "name": "pttdigital.pos.oil.backend-orders",
  "version": "0.0.1",
  "private": true,
  "main": "build/server.js",
  "scripts": {
    "server": "nodemon --inspect=127.0.0.1:9235 src/server.ts",
    "lint": "eslint ./src",
    "test": "cross-env NODE_ENV=test TS_NODE_FILES=true mocha --exit --require ts-node/register test/**/*.{ts,js}",
    "coverage": "nyc --no-cache yarn test"
  },
  "dependencies": {
    "@typegoose/typegoose": "8.1.1",
    "@types/lodash": "4.14.171",
    "axios": "0.21.1",
    "body-parser": "1.19.0",
    "bson": "^4.6.0",
    "cors": "2.8.5",
    "date-fns": "2.23.0",
    "dotenv-safe": "8.2.0",
    "express": "4.17.1",
    "helmet": "4.6.0",
    "inversify": "5.0.5",
    "lodash": "4.17.21",
    "mongoose": "5.13.7",
    "nodemon": "2.0.6",
    "reflect-metadata": "0.1.13",
    "responsio": "0.3.0",
    "ts-node": "10.2.1",
    "winston": "3.3.3",
    "winston-daily-rotate-file": "4.5.0",
    "winston-elasticsearch": "0.15.8"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@types/cors": "2.8.8",
    "@types/express": "4.17.9",
    "@types/mocha": "9.0.0",
    "@types/node": "14.6.0",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "chai": "4.3.4",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "istanbul-reports": "3.0.2",
    "mocha": "9.1.0",
    "nock": "13.1.2",
    "nyc": "15.1.0",
    "request": "2.88.2",
    "sinon": "11.1.2",
    "source-map-support": "0.5.19",
    "testcontainers": "7.19.1",
    "typescript": "4.4.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "rules": {
      "no-console": 2,
      "no-shadow": 2,
      "eqeqeq": [
        2,
        "smart"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "_templates/**",
      "coverage/**",
      "test/**",
      "**/*.d.ts",
      "**/*.test.ts",
      "src/models/**.ts"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true
  },
  "mocha": {
    "require": [
      "./test/fixtures.test.cjs"
    ]
  }
}
